{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "types/**/*",
    "../../types/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/__test__"
  ],
  "compilerOptions": {
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@t/*": [
        "types/*"
      ],
      "@t/index": [
        "types/index.d.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  }
}